<h2>Login</h2>
<div class="row g-3">

    <form class="row g-3" action="/login" method="POST">

        <div class="col-sm-3">
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="basic-addon1">Usuario</span>
                <input type="text" name="user" required class="form-control" placeholder="Usuario" aria-label="Usuario"
                    aria-describedby="basic-addon1">
            </div>
        </div>

        <div class="col-sm-4">
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="basic-addon2">Contrase√±a</span>
                <input type="password" name="pass" required class="form-control" placeholder="Password"
                    aria-label="Password" aria-describedby="basic-addon1">
            </div>
        </div>

        <div class="col-sm-2">
            <div class="d-grid gap-2">
                <button id="boton-login" class="btn btn-primary btn-sm" type="submit">Entrar</button>
            </div>
        </div>



    </form>
</div>

<script src="/socket.io/socket.io.js"></script>


<script>
    const socket = io('/login');

    (function () {
        document
            .getElementById("boton-login")
            .addEventListener("click", () => {
                fetch("/login")
                    .then(responsive => responsive.json())
                    .then(data => console.log(data))
                    .catch(console.error)
            })
    })();

</script>